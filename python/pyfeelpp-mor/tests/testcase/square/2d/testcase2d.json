{
    "Name": "Test case 2D",
    "ShortName": "testcase2d",
    "Models":
    {
        "heat":[
            {
                "name":"heat1",
                "materials":["Omega_1"],
                "setup": {
                    "heat-sources":
                    {
                        "type":"heat-source",
                        "expr":"2*k_1*k_1:k_1"
                    }
                }
            },
            {
                "name":"heat2",
                "materials":["Omega_2"],
                "setup": {
                    "heat-sources":
                    {
                        "type":"heat-source",
                        "expr":"2*k_2*k_2:k_2"
                    }
                }
            }
        ]
    },
    "CRBParameters":
    {
        "k_2":
        {
            "min": "1",
            "max": "20"
        }
    },
    "Parameters":
    {
        "k_1":"1",
        "k_2":"5"
    },
    "Meshes":
    {
        "heat":
        {
            "Import":
            {
                "filename":"$cfgdir/2sqr.geo",
                "hsize": 0.1
            },
            "DistanceToRange":
            {
                "boundary":{
                    "markers":["Gamma_1","Gamma_2","Gamma_int","Gamma_dir","Gamma_neu"]
                },
                "Gamma_1":{
                    "markers":["Gamma_1"]
                },
                "Gamma_2":{
                    "markers":["Gamma_2"]
                },
                "Gamma_int":{
                    "markers":["Gamma_int"]
                },
                "Gamma_dir":{
                    "markers":["Gamma_dir"]
                },
                "Gamma_neu":{
                    "markers":["Gamma_neu"]
                }
            }
        }
    },
    "Materials":
    {
        "Omega_1":
        {
            "k":"k_1:k_1",
            "Cp":"1.4e6",
            "rho":"1"
        },
        "Omega_2":
        {
            "k":"k_2:k_2",
            "Cp":"1.4e6",
            "rho":"1"
        }
    },
    "BoundaryConditions":
    {
        "heat": 
        {
            "temperature":
            {
                "Gamma_dir": {
                    "expr": "4*k_1:k_1"
                }
            },
            "flux": 
            {
                "Gamma_1": {
                    "expr": "0"
                },
                "Gamma_2": {
                    "expr": "0"
                },
                "Gamma_neu":{
                    "expr": "4*k_2*k_2:k_2"
                }
            }
        }
    },
    "CRBOutputs":
    {
        "Points_pointO_expr_TA":
        {
            "type":"point",
            "coord": [0,0,0]
        },
        "Statistics_T_Omega1_mean":
        {
            "type":"mean",
            "markers": ["Omega_1"],
            "expr": "crb_u:crb_u",
            "topodim": 2
        },
        "Statistics_T_Omega2_mean":
        {
            "type":"mean",
            "markers": ["Omega_2"],
            "expr": "crb_u:crb_u",
            "topodim": 2
        },
        "Statistics_T_int_mean":
        {
            "type":"mean",
            "markers": ["Gamma_int"],
            "expr": "crb_u/2:crb_u",        // as this is internal interface, we need to divide the value by cause because element are counted twice
            "topodim": 1
        }
    },
    "PostProcess":
    {
        "heat":{
            "Exports":
            {
                "fields":["temperature","pid"],
                "expr": {
                        "flux":
                        {
                            "expr":"{-materials_k * heat_grad_T_0,-materials_k * heat_grad_T_1,-materials_k * heat_grad_T_2}:materials_k:heat_grad_T_0:heat_grad_T_1:heat_grad_T_2",
                            "representation":["element","nodal"]
                        }
                    }
            },
            "Measures":
            {
                "Statistics":
                {
                    "T_Omega1":
                    {
                        "type":"mean",
                        "markers":["Omega_1"],
                        "field": "temperature"
                    },
                    "T_Omega2":
                    {
                        "type":"mean",
                        "markers":["Omega_2"],
                        "field": "temperature"
                    },
                    "T_int":
                    {
                        "type":"mean",
                        "markers":["Gamma_int"],
                        "field": "temperature"
                    }
                },
                "Points":
                {
                    "pointO":
                    {
                        "coord": "{0, 0, 0}",
                        "expressions": { "TA": "heat_T:heat_T"}
                    }
                }
            }
        }
    }
}