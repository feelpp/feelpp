{
    "Name": "Falling Ball",
    "ShortName":"ball",
    "Models":
    {
        "solid":{
            "setup":{
                "equations":"Elasticity",
                "material-model":"StVenantKirchhoff",
                "body-forces":"{0.,-0.1}"
            }
        }
    },
    "Meshes":
    {
        "solid":
        {
            "Import":
            {
                "filename":"$cfgdir/ball.geo",
                "hsize":0.4
            }
        }
    },
    "Materials":
    {
        "Ball":{
            "E":"75",
            "nu":"0.25",
            "rho":"1"
        }
    },
    "BoundaryConditions":
    {
        "solid":
        {
            "normal_stress":
            {
                "Wall":{
                    "expr":"0" 
                }
            }
        }
    },
    "CollisionForce":  
    {
        "body":
        {
            "setup": 
            {
                "model":"dynamic",
                "type":"unilateral", 
                "walls":
                {
                    "nbr":1,
                    "distances":-24,
                    "directions":[0.0,-1.0]
                },
                "gamma_0":250,
                "theta":1,
                "tolerance":0.05,
                "fixedPoint":1,
                "updateA":0,
                "pressurePoint":[0.0,-20.0],
                "dispCondition":1,
                "initCondition":[0.0,0.0],
                "withMarker":0,
                "raytracing":0
            }
        }
    },
    "PostProcess":
    {
        "solid":
        {
            "Exports":
            {
                "fields":["displacement","velocity","pid","von-mises-criterion"],
                "expr": 
                {
                    "contactFaces":"meshes_solid_fields_contactFaces:meshes_solid_fields_contactFaces",
                    "contactPressure":"meshes_solid_fields_contactPressure:meshes_solid_fields_contactPressure",
                    "contactRegion":"meshes_solid_fields_contactRegion:meshes_solid_fields_contactRegion"
                }
            },
            "Measures":
            {
                "Points":
                {
                    "bottom_disp":
                    {
                        "coord":"{0.0,-20.0}",
                        "fields":"displacement"
                    }
                }
            }
        }
    }
}