subproject libs/numeric/bindings/lapack/test ;

LAPACK_PATH = /usr/lib ;
LAPACK_LIB  = lapack ;

BLAS_PATH = /usr/lib ;
BLAS_LIB  = blas g2c ;

exe lapack
        : lapack.cpp 
        :  <include>$(BOOST_ROOT)
	   <include>$(B_ROOT)
	   <library-path>$(LAPACK_PATH)
	   <find-library>$(LAPACK_LIB)
        ;

