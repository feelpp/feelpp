// -*- mode: javascript -*-
{
    "Name": "Solid Mechanics ",
    "ShortName":"Solid",
    "Models":
    {
        "solid":{
            "equations":"Hyper-Elasticity",
            "material-model":"StVenantKirchhoff"
        }
    },
    "Parameters":
    {
        "gravity":"2"
    },
    "Meshes":
    {
        "solid":
        {
            "Import":
            {
                "filename":"$cfgdir/csm.geo",
                "hsize":0.004
            }
        }
    },
    "Materials":
    {
        "beam":{
            "E":"1.4e6",
            "nu":"0.4",
            "rho":"1e3"
        }
    },
    "BoundaryConditions":
    {
        "displacement":
        {
            "Dirichlet":
            {
                "fixed-wall":
                {
                    "expr":"{0,0}"
                }
            },
            "Neumann_scalar":
            {
                "free-wall":
                {
                    "expr":"0" 
                }
            },
            "VolumicForces":
            {
                "beam":
                {
                    "expr":"{0,-gravity*1e3}:gravity" 
                }
            }
        }
    },
    "PostProcess":
    {
        "solid":
        {
            "Exports":
            {
                "fields":["displacement","velocity","pid"]
            },
            "Measures":
            {
                "Points":
                {
                    "pointA":
                    {
                        "coord":"{0.6,0.2,0}",
                        "fields":["displacement","velocity"]
                    }
                },
                "Statistics":
                {
                    "disp":
                    {
                        "markers":"free-wall",
                        "type":"max",
                        "expr":"solid_s_magnitude:solid_s_magnitude"
                    }
                }
            }
        }
    }
}
