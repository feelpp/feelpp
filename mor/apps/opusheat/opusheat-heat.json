// -*- mode: javascript -*-
{
    "Name": "Opus heat toolbox",
    "ShortName":"OpusHeat-tb",
    "CRBParameters":
    {
        "k_1":
        {
            "min":"1",
            "max":"3"
        },
        "k_2":
        {
            "min":"1",
            "max":"3"
        },
        "hcoeff":
        {
            "min":"0.1",
            "max":"5"
        },
        "q_1":
        {
            "min":"1e4",
            "max":"1e6"
        },
        "q_2":
        {
            "min":"1e4",
            "max":"1e6"
        },
        "vinconv":
        {
            "min":"1",
            "max":"30"
        }
    },
    "Parameters":
    {
        "k_1":"2",
        "k_2":"2",
        "hcoeff":"2",
        "q_1":"1e5",
        "q_2":"1e5",
        "vinconv":"15"
    },
    "Models":
    {
        "heat":[
            {
                "name":"IC1",
                "materials":["IC1"],
                "setup":{
                    "heat-sources":{
                        "expr":"q_1:q_1"
                    }
                }
            },
            {
                "name":"IC2",
                "materials":["IC2"],
                "setup":{
                    "heat-sources":{
                        "expr":"q_2:q_2"
                    }
                }
            },
            {
                "name":"PCBAIR",
                "materials":["PCB","AIR"],
                "setup":{
                    "convection":"{0,-vinconv*(x-0.008)*(x-0.054)*(x>0.008)}:x:vinconv"
                }
            }
        ]
    },
    "Materials":
    {
        "PCB":
        {
            "k":"3e-2",
            "Cp":"2e6",
            "rho":"1"
        },
        "AIR":
        {
            "k":"3e-2",
            "Cp":"1",
            "rho":"1100"
        },
        "IC1":
        {

            "k":"k_1:k_1",
            "Cp":"1.4e6",
            "rho":"1"
        },
        "IC2":
        {
            "k":"k_2:k_2",
            "Cp":"1.4e6",
            "rho":"1"
        }
    },
    "InitialConditions":
    {
        "heat":
        {
            "temperature":
            {
                "Expression":
                {
                    "myic1":
                    {
                        "expr":300
                    }
                }
            }
        }
    },
    "BoundaryConditions":
    {
        "heat":
        {
            "temperature":
            {
                "dirichlet":
                {
                    "markers":["Gamma_4_AIR1","Gamma_4_AIR4","Gamma_4_PCB"],
                    "expr":"300"
                }
            },
            "convective_heat_flux":
            {
                "Gamma_2":
                {
                    "h":"hcoeff:hcoeff",// h coeff
                    "Text":"300"// temperature exterior
                }
            }
        }
    },
    "CRBOutputs":
    {
        "test":
        {
            "type":"mean",
            "markers":"AIR",
            "topodim":3,
            "expr":"k_1*crb_u:k_1:crb_u"
        }
    },
    "PostProcess":
    {
        "heat":
        {
            "Exports":
            {
                "fields":["temperature"]
            }
        }
    }
}
