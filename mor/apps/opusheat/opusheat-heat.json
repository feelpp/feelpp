// -*- mode: javascript -*-
{
    "Name": "Opus heat toolbox",
    "ShortName":"OpusHeat-tb",
    "Parameters":
    {
        "k_1":
        {
            "value":"2",
            "min":"1",
            "max":"3"
        },
        "k_2":
        {
            "value":"2",
            "min":"1",
            "max":"3"
        },
        "hcoeff":
        {
            "value":"2",
            "min":"0.1",
            "max":"5"
        },
        "q_1":
        {
            "value":"1e5",
            "min":"1e4",
            "max":"1e6"
        },
        "q_2":
        {
            "value":"1e5",
            "min":"1e4",
            "max":"1e6"
        },
        "vinconv":
        {
            "value":"15",
            "min":"1",
            "max":"30"
        }
    },
    "Models":
    {
        "heat":[
            {
                "name":"IC1",
                "materials":["IC1"],
                "setup":{
                    "heat-sources":{
                        "expr":"q_1:q_1"
                    }
                }
            },
            {
                "name":"IC2",
                "materials":["IC2"],
                "setup":{
                    "heat-sources":{
                        "expr":"q_2:q_2"
                    }
                }
            },
            {
                "name":"PCBAIR",
                "materials":["PCB","AIR"],
                "setup":{
                    "convection":"{0,-vinconv*(x-0.008)*(x-0.054)*(x>0.008)}:x:vinconv"
                }
            }
        ]
    },
    "Materials":
    {
        "PCB":
        {
            "k":"3e-2",
            "Cp":"2e6",
            "rho":"1"
        },
        "AIR":
        {
            "k":"3e-2",
            "Cp":"1",
            "rho":"1100"
        },
        "IC1":
        {

            "k":"k_1:k_1",
            "Cp":"1.4e6",
            "rho":"1"
        },
        "IC2":
        {
            "k":"k_2:k_2",
            "Cp":"1.4e6",
            "rho":"1"
        }
    },
    "InitialConditions":
    {
        "heat":
        {
            "temperature":
            {
                "Expression":
                {
                    "myic1":
                    {
                        "expr":300
                    }
                }
            }
        }
    },
    "BoundaryConditions":
    {
        "temperature":
        {
            "Dirichlet":
            {
                "dirichlet":
                {
                    "markers":["Gamma_4_AIR1","Gamma_4_AIR4","Gamma_4_PCB"],
                    "expr":"300"
                }
            },
            "Robin":
            {
                "Gamma_2":
                {
                    "expr1":"hcoeff:hcoeff",// h coeff
                    "expr2":"300"// temperature exterior
                }
            }
        }
    },
    "PostProcess":
    {
        "heat":
        {
            "Exports":
            {
                "fields":["temperature"]
            }
        }
    }
}
